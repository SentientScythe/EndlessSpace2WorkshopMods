        <Modifier TargetProperty="SystemGrowth"             Operation="Percent"  Value="0.15" Path="./ClassColonizedStarSystem"  />
    </SimulationDescriptor>

    <SimulationDescriptor Name="StarSystemImprovementQuestHoratio08Alternative" Type="StarSystemImprovement">
        <Modifier TargetProperty="PlanetRawIndustry"        Operation="Addition" Value="3" Path="./ClassColonizedStarSystem/ClassColonizedPlanet" TooltipHidden="true" />
