        <Modifier TargetProperty="TradingRouteIncomeModifier"   Operation="Percent"   Value="0.25" Path="./ClassColonizedStarSystem"/>
        <BinaryModifier TargetProperty="Happiness"              Operation="Addition"  Left="5" BinaryOperation="Multiplication" Right="$(NumberOfTradingCompanies)" Path="./ClassColonizedStarSystem" SearchValueFromPath="true"/>
