    <SimulationDescriptor Name="StarSystemImprovementInfluenceSpecialHisshos" Type="StarSystemImprovement">
        <Modifier TargetProperty="NetSystemEmpirePoint"         Operation="Addition" Value="5" Path="./ClassColonizedStarSystem"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="StarSystemImprovementApproval2MajorHisshos" Type="StarSystemImprovement">
