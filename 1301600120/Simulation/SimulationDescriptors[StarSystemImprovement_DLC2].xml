        <Modifier TargetProperty="SystemEmpirePoint"    Operation="Percent"  Value="0.15" Path="./ClassColonizedStarSystem"  />
    </SimulationDescriptor>

    <SimulationDescriptor Name="StarSystemImprovementBoostHomeSystem" Type="StarSystemImprovement"/>
    <SimulationDescriptor Name="StarSystemImprovementBoostHomeSystemEffect" Type="StarSystemImprovement">
        <!--<Modifier TargetProperty="SystemFIDSPercent"                   Operation="Addition"     Value="-0.5"    Path="ClassColonizedStarSystem" TooltipHidden="true"/>-->
        <Modifier TargetProperty="NetSystemGrowth"                     Operation="Percent"      Value="-0.5"    Path="ClassColonizedStarSystem" TooltipHidden="true"/>
        <Modifier TargetProperty="NetSystemProduction"                 Operation="Percent"      Value="-0.5"    Path="ClassColonizedStarSystem" TooltipHidden="true"/>
        <Modifier TargetProperty="AmountToTransferInfiniteHissho"      Operation="Addition"     Value="0.25"    Path="ClassColonizedStarSystem" TooltipHidden="true"/>
        <Modifier TargetProperty="SystemCountForHisshoLaw"             Operation="Subtraction"  Value="1"      Path="../ClassEmpire" TooltipHidden="true"/>
        <BinaryModifier TargetProperty="SystemProductionFromProductionConversion"    Operation="Addition" Left="-1"     BinaryOperation="Multiplication" Right="$(SystemProduction)"  Path="ClassColonizedStarSystem" TooltipHidden="true"/>
    </SimulationDescriptor>

    <!-- ######## TIMELORDS ######## -->
    <SimulationDescriptor Name="StarSystemImprovementQuestTimeLords01Alternative" Type="StarSystemImprovement">
        <BinaryModifier TargetProperty="SystemEmpirePoint"          Operation="Addition" Left="15"      BinaryOperation="Multiplication" Right="$(HasNonMajorPopulation)" Path="./ClassColonizedStarSystem" SearchValueFromPath="true" TooltipOverride="%StarSystemImprovementQuestTimeLords01AlternativeTooltipsEffect"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="StarSystemImprovementQuestUnfallen05Alternative" Type="StarSystemImprovement">
        <BinaryModifier TargetProperty="SystemEmpirePoint"	  Operation="Addition"     Left="7"     BinaryOperation="Multiplication" Right="$(PopulationType)"		    Path="./ClassColonizedStarSystem" SearchValueFromPath="true" TooltipOverride="%StarSystemImprovementQuestUnfallen05AlternativeTooltipsEffect"/>
    </SimulationDescriptor>

