    </SimulationDescriptor>    

    <SimulationDescriptor Name="StarSystemImprovementQuestHoratio06Alternative" Type="StarSystemImprovement">
        <Modifier TargetProperty="PlanetRawFood"        Operation="Addition" Value="3"   Path="./ClassColonizedStarSystem/ClassColonizedPlanet" TooltipHidden="true" />
